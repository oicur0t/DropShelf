# DropShelf Configuration
# Copy this file to .env and update with your values

# Domain for OPDS access (without https://)
OPDS_DOMAIN=opds.example.com

# Port mapping for direct HTTP access (optional - for testing)
# Leave empty to disable direct port access
HOST_PORT=8080

# Books directory path on host
BOOKS_DIR_HOST=/path/to/your/books

# Container settings
BOOKS_DIR=/books
CACHE_TTL=300
MAX_RESULTS=50
LOG_LEVEL=INFO

# Feed metadata
FEED_TITLE=My Book Library
FEED_AUTHOR=DropShelf OPDS Server

# Authentication - HTTP Basic Auth for OPDS access
# Set AUTH_ENABLED=true to require authentication
# KyBook 3 supports: https://username:password@domain/opds
AUTH_ENABLED=false

# Method 1: htpasswd file (recommended - passwords are hashed)
# Generate with: htpasswd -c .htpasswd username
# Or: echo "username:$(openssl passwd -apr1 'password')" > .htpasswd
HTPASSWD_FILE=.htpasswd

# Method 2: plaintext env vars (fallback - less secure)
# Only used if HTPASSWD_FILE is not set or file doesn't exist
AUTH_USERNAME=
AUTH_PASSWORD=

# Traefik settings - must match existing Traefik setup
# Network: Use the same external network Traefik is on
TRAEFIK_NETWORK=traefik_public
# Cert resolver: Must match Traefik's certificatesresolvers name
CERT_RESOLVER=letsencrypt
